@{
    ViewData["Title"] = "Calculator";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculator</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Calculator</h2>
        <p>(Because I know you'd want to pay to hear me talk about this)</p>
        <label for="hours">Enter number of hours:</label>
        <input type="number" id="hours" min="0" step="0.1">
        <p class="error" id="error-message" style="display: none;">Please enter a valid positive number.</p>

        <label for="rate">Rate per hour:</label>
        <input type="text" id="rate" value="0.39" readonly>

        <button id="calculate">Calculate Total</button>
        <br />

        <h3>Total Cost: $<span id="total">0.00</span></h3>
    </div>

    <script>
        $(document).ready(function() {
            $("#calculate").click(function() {
                let hours = parseFloat($("#hours").val());
                let rate = parseFloat($("#rate").val());
                let errorMessage = $("#error-message");

                if (isNaN(hours) || hours <= 0) {
                    errorMessage.show();
                    $("#total").text("0.00");
                } else {
                    errorMessage.hide();
                    let total = (hours * rate).toFixed(2);
                    $("#total").text(total);
                }
            });
        });
    </script>
</body>
</html>
